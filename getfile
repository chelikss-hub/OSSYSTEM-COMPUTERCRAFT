rednet.open("top")

term.clear()
term.setCursorPos(1, 1)

print("Getting files...")

while true do
  id,msg = rednet.receive()
  if msg == "RECEIVE" then
    id2,msg2 = rednet.receive()
    f = fs.open(msg2, "w")
    id3,msg3 = rednet.receive()
    f.write(msg3)
    f.close()
    print("File "..msg2.."received!")
    sleep(5)
    shell.run("../.menu")
  end
end

term.clear()
term.setCursorPos(1, 1)
print("Got da file")
sleep(5)
shell.run("../.menu")
